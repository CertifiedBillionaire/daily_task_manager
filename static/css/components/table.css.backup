    outline: 2px solid var(--primary-color);
    outline-offset: -2px;
}

td.col-selected {
    background: rgba(0,0,0,0.04); /* subtle */
}
/* --- NEW CODE HERE --- */
/* 1) Lock the grid */
.issues-table {
  width: 100%;
  table-layout: fixed;         /* every column keeps its lane */
  border-collapse: collapse;   /* clean single-line borders */
}

/* 2) Same box model for headers + cells */
.issues-table th,
.issues-table td {
  padding: 10px 12px;                 /* SAME padding for th + td */
  border: 1px solid var(--border-color);
  box-sizing: border-box;             /* widths include padding + border */
  vertical-align: middle;
  text-align: left;                   /* default; your JS can override */
  white-space: nowrap;                /* keep one line */
  overflow: hidden;                   /* clip overflow */
  text-overflow: ellipsis;            /* show ... when clipped */
  line-height: 1.25;                  /* same line height for both */
}

/* 3) Header look (no layout change, just style) */
.issues-table thead th {
  background: var(--background-color-medium);
  font-weight: 600;
  color: var(--text-color-dark);
}

/* 4) Resizer sits on top; doesn't shift text */
.issues-table th {
  position: relative;
}

.issues-table th .resizer {
  position: absolute;
  top: 0;
  right: 0;                /* on the edge */
  width: 8px;              /* easy to grab */
  height: 100%;
  cursor: col-resize;
  user-select: none;
  touch-action: none;
}

/* Optional: hide resizer on last column if you don't want it */
.issues-table thead th:last-child .resizer {
  display: none;
}

/* Safety: ensure EVERYTHING in table uses border-box (stops 1px drifts) */
.issues-table * {
  box-sizing: border-box;
}
/* --- END NEW CODE --- */
