/* This file contains styling for the issues table. */
.issues-table {
    /* REMOVED: width: 100%; */ /* Let JS control total width */
    /* REMOVED: min-width: 100%; */ /* Let JS control total width */
    border-collapse: collapse;
    margin-top: 20px;
    font-size: 0.9em;
    border: 1px solid #e0e0e0; /* Subtle border around the entire table */
    table-layout: fixed; /* Crucial for fixed column widths */
}

/* We removed the individual bottom borders to avoid redundant lines */
.issues-table th,
.issues-table td {
    padding: 12px 15px;
    border-bottom: 1px solid #f0f0f0; /* Very subtle line between rows */
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap; /* Keep text on a single line */
}

/* NEW: This is for data cells (td) only, to break long words */
.issues-table td {
    word-break: break-all; /* Break words to fit within cell, even without spaces */
    width: auto; /* NEW: Ensure td's defer to th's width */

}

.issues-table th {
    background-color: #F8F9FA;
    color: var(--text-color-dark);
    font-weight: 600;
    text-transform: uppercase;
}

/* Hover effect for table rows */
.issues-table tbody tr:hover {
    background-color: #F8F9FA;
    cursor: pointer;
}

/* Color-coded badges for Priority */
.priority-badge {
    padding: 4px 8px;
    border-radius: 12px;
    font-weight: 600;
    font-size: 0.8em;
    white-space: nowrap;
}

.priority-badge.IMMEDIATE {
    background-color: #FFCDD2;
    color: #C62828;
}

.priority-badge.High {
    background-color: #FFECB3;
    color: #FF8F00;
}

.priority-badge.Medium {
    background-color: #BBDEFB;
    color: #1565C0;
}

.priority-badge.Low {
    background-color: #C8E6C9;
    color: #2E7D32;
}

.priority-badge.CLEANING {
    background-color: #E1BEE7;
    color: #6A1B9A;
}

/* Color-coded badges for Status */
.status-badge {
    padding: 4px 8px;
    border-radius: 12px;
    font-weight: 600;
    font-size: 0.8em;
    white-space: nowrap;
}

.status-badge.Open {
    background-color: #BBDEFB;
    color: #1565C0;
}

.status-badge.Resolved {
    background-color: #C8E6C9;
    color: #2E7D32;
}

.status-badge.InProgress {
    background-color: #FFECB3;
    color: #FF8F00;
}

.status-badge.AwaitingPart {
    background-color: #CFD8DC;
    color: #455A64;
}

/* Highlight rows based on priority */
.issues-table tbody tr.priority-IMMEDIATE {
    background-color: #FFEBEE;
}

.table-responsive {
    width: 100%; /* Ensure it takes full available width */
    margin: 0 auto;
    overflow-x: auto; /* Add horizontal scrolling for wider tables */
}
